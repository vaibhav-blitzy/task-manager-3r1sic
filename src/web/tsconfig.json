{
  "compilerOptions": {
    // TypeScript Version and Basic Settings
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    
    // Module Settings
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    // React-specific Settings
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    
    // Strict Type Checking
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
    // Source Maps
    "sourceMap": true,
    
    // Paths and Directories
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"]
    },
    
    // Types
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    
    // Advanced Options
    "skipLibCheck": true,
    "allowJs": true,
    "incremental": true,
    
    // Error handling
    "noErrorTruncation": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}