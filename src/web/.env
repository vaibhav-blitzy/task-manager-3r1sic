# This file contains common environment variables shared across all environments
# Environment-specific overrides should be defined in .env.development, .env.production, etc.

# Application Configuration
VITE_APP_NAME=Task Management System
VITE_DEFAULT_LANGUAGE=en

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_WEBSOCKET_URL=ws://localhost:8000/ws
VITE_NOTIFICATION_POLLING_INTERVAL=30000

# Authentication Configuration
VITE_AUTH0_DOMAIN=taskmanagement.auth0.com
VITE_AUTH0_CLIENT_ID=your_auth0_client_id
VITE_AUTH0_AUDIENCE=https://api.taskmanagement.com

# Feature Flags
VITE_FEATURE_REALTIME_COLLABORATION=true
VITE_FEATURE_FILE_ATTACHMENTS=true
VITE_FEATURE_ANALYTICS_DASHBOARD=true
VITE_CALENDAR_INTEGRATION_ENABLED=true

# File Upload Configuration
VITE_MAX_UPLOAD_SIZE=25000000

# Monitoring and Debugging
VITE_SENTRY_DSN=
VITE_LOG_LEVEL=info
VITE_ENABLE_MOCKS=false