# working on the same project across various editors and IDEs
# https://editorconfig.org/

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Settings for Python files
[*.py]
indent_size = 4
max_line_length = 88  # Black formatter default

# Settings for JavaScript and TypeScript files
[*.{js,ts,jsx,tsx}]
indent_size = 2

# Settings for HTML files
[*.html]
indent_size = 2

# Settings for CSS files
[*.{css,scss,sass}]
indent_size = 2

# Settings for Markdown files
[*.md]
trim_trailing_whitespace = false

# Settings for JSON and YAML files
[*.{json,yml,yaml}]
indent_size = 2

# Settings for shell scripts
[*.sh]
indent_size = 2

# Settings for Makefiles
[Makefile]
indent_style = tab